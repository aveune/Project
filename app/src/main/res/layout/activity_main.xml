<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.user.weather.MainActivity">
    <LinearLayout
        android:id="@+id/dooyoung"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:paddingLeft="7dp"
                android:textSize="20sp"
                android:text="도시이름"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/layout_background"
                android:text="x"
                android:textSize="20sp"
                android:textColor="#ffff" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_backgroundtwo">

            <TextView
                android:id="@+id/monday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="23dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="25dp"
                android:text="월요일"
                android:textSize="20sp"
                android:textColor="#ffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/montmp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/monday"
                android:layout_alignStart="@+id/monday"
                android:layout_below="@+id/monday"
                android:layout_marginTop="31dp"
                android:text="온도"
                android:textSize="20sp"
                android:textColor="#ffff"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/montmp"
                android:layout_alignStart="@+id/montmp"
                android:layout_below="@+id/montmp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="35dp"
                android:text="전체날짜"
                android:textSize="20sp"
                android:textColor="#ffff"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/monimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/monday"
                android:layout_marginEnd="12dp"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/list"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_backgroundth"
            android:padding="10dp">

            <TextView
                android:id="@+id/tusday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="화요일"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tustmp"
                android:layout_margin="20dp"
                android:layout_toLeftOf="@id/tusimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/tusimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_backgroundth"
            android:padding="10dp">

            <TextView
                android:id="@+id/wedday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="수요일"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/wedtmp"
                android:layout_margin="20dp"
                android:layout_toLeftOf="@id/wedimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/wedimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_backgroundth"
            android:padding="10dp">

            <TextView
                android:id="@+id/thuday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="목요일"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/thutmp"
                android:layout_margin="20dp"
                android:layout_toLeftOf="@id/thuimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/thuimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_backgroundth"
            android:padding="10dp">

            <TextView
                android:id="@+id/friday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="금요일"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fritmp"
                android:layout_margin="20dp"
                android:layout_toLeftOf="@id/friimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/friimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_backgroundth"
            android:padding="10dp">

            <TextView
                android:id="@+id/satday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="토요일"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sattmp"
                android:layout_margin="20dp"
                android:layout_toLeftOf="@id/satimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/satimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_backgroundth"
            android:padding="10dp">

            <TextView
                android:id="@+id/sunday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="일요일"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/suntmp"
                android:layout_margin="20dp"
                android:layout_toLeftOf="@id/sunimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="온도"
                android:textColor="#ffff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/sunimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@mipmap/ic_launcher" />

        </RelativeLayout>
    </LinearLayout>



</ScrollView>
